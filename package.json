{
  "name": "@documente/documente",
  "version": "1.0.0-beta.12",
  "description": "A literate testing framework to generate automated tests from documentation files",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/documente/documente.git"
  },
  "keywords": [
    "documentation",
    "testing",
    "literate",
    "bdd",
    "tdd",
    "e2e"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "pckerneis",
  "license": "GPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "documente": "bin/index.js"
  },
  "files": [
    "src/extract/**/*",
    "src/templates/**/*",
    "dist"
  ],
  "scripts": {
    "start": "node src/extract.js",
    "prettier": "prettier --write .",
    "build": "tsup src/run/index.ts --format cjs,esm --dts --clean",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@documente/phrase": "^1.0.0-beta.13",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "mustache": "^4.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "playwright": "^1.40.1",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
