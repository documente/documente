{
  "name": "@documente/kitchen-sink",
  "version": "1.0.0-beta.1",
  "license": "GPL-3.0",
  "scripts": {
    "start": "npx http-server static -p 8080",
    "clean": "rimraf cypress/e2e e2e",
    "documente:cypress": "documente -c documente-cypress.config.yaml",
    "documente:cypress:ts": "documente -c documente-cypress.config.yaml --output-language typescript",
    "documente:cypress:cjs": "documente -c documente-cypress.config.yaml --output-module-resolution cjs",
    "documente:playwright": "documente -c documente-playwright.config.yaml",
    "documente:playwright:ts": "documente -c documente-playwright.config.yaml --output-language typescript",
    "documente:playwright:cjs": "documente -c documente-playwright.config.yaml --output-module-resolution cjs",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "playwright:open": "npx playwright test --ui",
    "playwright:run": "npx playwright test",
    "prepare-test": "npx playwright install --with-deps",
    "wait-for-app": "wait-on http://127.0.0.1:8080",
    "test:cypress": "run-s clean wait-for-app documente:cypress cypress:run",
    "test:cypress:ts": "run-s clean wait-for-app documente:cypress:ts cypress:run",
    "test:cypress:cjs": "run-s clean wait-for-app documente:cypress:cjs cypress:run",
    "test:playwright": "run-s clean wait-for-app documente:playwright playwright:run",
    "test:playwright:ts": "run-s clean wait-for-app documente:playwright:ts playwright:run",
    "test:playwright:cjs": "run-s clean wait-for-app documente:playwright:cjs playwright:run",
    "test:all": "run-s test:cypress test:playwright test:cypress:ts test:playwright:ts test:cypress:cjs test:playwright:cjs",
    "test": "concurrently \"npm run start\" \"npm run test:all\" --kill-others --success !command-0"
  },
  "devDependencies": {
    "@documente/generator": "../generator",
    "@documente/runner-cypress": "../runner-cypress",
    "@documente/runner-playwright": "../runner-playwright",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.1",
    "wait-on": "^7.2.0"
  }
}
